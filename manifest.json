{
  "manifest_version": 3,
  "name": "ChatGPT Prompt Manager",
  "version": "1.1.0",
  "description": "Verwaltung und Ausf√ºhrung von ChatGPT-Prompts.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "sidePanel"
  ],
    "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://bard.google.com/*"
    ],
  "action": {
    "default_title": "Prompt Manager",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"


  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
        "matches": [
          "https://chat.openai.com/*",
          "https://chatgpt.com/*",
          "https://gemini.google.com/*",
          "https://bard.google.com/*"
        ],
      "js": [
        "content.js"
      ]
    }
  ]
}